{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "msi-fan-control",
  "version": "0.5.3",
  "identifier": "com.msi.fancontrol.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "MSI Fan Control",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data:; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "externalBin": [
      "binaries/msi-sidecar"
    ],
    "linux": {
      "deb": {
        "depends": [
          "policykit-1"
        ],
        "files": {
          "/usr/share/polkit-1/actions/com.msi.fancontrol.run-sidecar.policy": "policy/com.msi.fancontrol.run-sidecar.policy"
        }
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": true,
      "scope": [
        {
          "name": "run-sidecar",
          "cmd": "pkexec",
          "args": [
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    }
  }
}